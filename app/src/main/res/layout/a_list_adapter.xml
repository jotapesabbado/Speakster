<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:text="123456789112345678911234567891123456789112345678911234567891123456789112345678911234567891" />

    <Switch
        android:id="@+id/switch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texto1"
        android:layout_alignEnd="@+id/texto1"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="15dp"
        android:scaleX="1.43 "
        android:scaleY="1 "
        tools:checked="false" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texto1"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="17dp"
        android:layout_toStartOf="@+id/switch4"
        app:srcCompat="@android:drawable/ic_menu_preferences"
        android:background="@android:color/transparent"/>


</RelativeLayout>