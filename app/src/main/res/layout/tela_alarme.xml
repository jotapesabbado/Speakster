<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    android:background="@color/White"
    >

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:numbersBackgroundColor="@color/colorPrimary"
        android:numbersInnerTextColor="@color/colorPrimary"
        android:numbersSelectorColor="@color/colorPrimary"
        android:numbersTextColor="@color/colorPrimary"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_picker"
        android:gravity="center"
        android:padding="@dimen/margin_weekpiker"


        >



        <Button
            android:id="@+id/domingo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_weekpiker"
            android:background="@drawable/time_circle"
            android:text="D" />

        <Button
            android:id="@+id/segunda"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_weekpiker"
            android:background="@drawable/time_circle"
            android:text="S" />

        <Button
            android:id="@+id/terca"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_weekpiker"
            android:background="@drawable/time_circle"
            android:text="T" />

        <Button
            android:id="@+id/quarta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_weekpiker"
            android:background="@drawable/time_circle"
            android:text="Q" />

        <Button
            android:id="@+id/quinta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_weekpiker"
            android:background="@drawable/time_circle"
            android:text="Q" />

        <Button
            android:id="@+id/sexta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_weekpiker"
            android:background="@drawable/time_circle"
            android:text="S" />

        <Button
            android:id="@+id/sabado"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/margin_weekpiker"
            android:background="@drawable/time_circle"
            android:text="S" />

    </LinearLayout>

</RelativeLayout>